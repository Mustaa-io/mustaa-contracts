{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.local"],
  "tasks": {
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["artifacts/**", "types/**"],
      "cache": true
    },
    "build:foundry": {
      "dependsOn": ["^build:foundry"],
      "cache": true
    },
    "build:js": {
      "dependsOn": ["^build", "^build:js"],
      "outputs": ["dist/**"],
      "cache": true
    },

    "build:types": {
      "dependsOn": ["^package", "^build:types"],
      "outputs": ["types/**"],
      "cache": true
    },
    "package": {
      "dependsOn": ["^package"],
      "outputs": ["artifacts/**"]
    },
    "lint": {
      "env": [
        "CONTRACT_VERIFICATION_TESTNET_PK",
        "CONTRACT_VERIFICATION_MAINNET_PK"
      ]
    },
    "lint:solidity": {},
    "test": {
      "cache": true,
      "env": ["COVERAGE"]
    },
    "test:coverage": {
      "dependsOn": ["test"],
      "cache": false
    },
    "test:foundry": {
      "dependsOn": ["^build", "^build:foundry"],
      "cache": true
    }
  }
}
